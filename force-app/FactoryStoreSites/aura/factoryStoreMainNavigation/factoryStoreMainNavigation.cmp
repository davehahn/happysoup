<aura:component extends="forceCommunity:navigationMenuBase">
	<ul onclick="{!c.onClick}">
    	<aura:iteration items="{!v.menuItems}" var="item">
            <aura:if isTrue="{!item.subMenu}">
            	<li>
                    {!item.label}
                    <ul>
                    	<aura:iteration items="{!item.subMenu}" var="subItem">
                        	<li class="{!subItem.active ? 'menuItemActive' : ''}">
                                <a href="javascript:void(0);" data-menu-item-id="{!subItem.id}">
                                    {!subItem.label}
                                </a>             
                            </li>
                        </aura:iteration>
                    </ul>
                </li>
                <aura:set attribute="else">
                    <li class="{!item.active ? 'menuItemActive' : ''}">
                        <a href="javascript:void(0);" data-menu-item-id="{!item.id}">
                            {!item.label}
                        </a>             
                    </li>
                </aura:set>
            </aura:if>            
        </aura:iteration>
    </ul>
</aura:component>