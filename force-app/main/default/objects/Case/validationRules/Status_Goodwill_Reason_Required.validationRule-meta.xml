<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Status_Goodwill_Reason_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status,&quot;Closed without Recovery&quot;),ISBLANK(TEXT(Goodwill_Reasons__c) ))</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>Please select a No Recovery Reason</errorMessage>
</ValidationRule>
