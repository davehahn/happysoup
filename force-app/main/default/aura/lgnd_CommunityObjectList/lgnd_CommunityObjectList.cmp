<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" controller="lgnd_CommunityObjectList_Controller">
  <aura:attribute name="title" type="String" access="global"/>
  <aura:attribute name="iconName" type="String" access="global" />
  <aura:attribute name="newURL" type="String" access="global"/>
  <aura:attribute name="listNames" type="String" access="global"/>
  <aura:attribute name="sObjectName" type="String" access="global" />
  <aura:attribute name="fields" type="String" access="global" />
  <aura:attribute name="globalFilter" type="String" access="global" />
  <aura:attribute name="searchInputString" type="String" access="global" />
  <aura:attribute name="isLoading" type="Boolean" access="global" default="false" />
  <aura:attribute name="accountIdentityField" type="String" access="global" />
  <aura:attribute name="viewURL" type="String" access="global" />
  <aura:attribute name="editURL" type="String" access="global" />

  <aura:attribute name="selectedList" type="String"  access="global"/>
  <aura:attribute name="availableLists" type="String[]"  access="global"/>

  <aura:attribute name="fieldLabels" type="String[]" />
  <aura:attribute name="fieldNames" type="String[]" />
  <aura:attribute name="fieldTypeMap" type="Object" />
  <aura:attribute name="records" type="sObject[]" />
  <aura:attribute name="recordCount" type="Integer" />
  <aura:attribute name="totalRecordCount" type="Integer" />
  <aura:attribute name="pageNumber" type="Integer" default="1" />
  <aura:attribute name="totalPages" type="Integer" default="1" />
  <aura:attribute name="perPage" type="Integer" default="15" />
  <aura:attribute name="pageOptions" type="Integer[]" />
  <aura:attribute name="listSelectorFilter" type="String" />
  <aura:attribute name="searchString" type="String" />
  <aura:attribute name="sortDir" type="String" />
  <aura:attribute name="sortField" type="String" />
  <aura:attribute name="sortedCol" type="String" />
  <aura:attribute name="shouldUseCache" type="Boolean" default="true" />

  <aura:attribute name="fieldDetails" type="Array" />

  <!-- Events -->
  <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
  <aura:handler event="c:lgnd_ListSelector_Event"
                action="{!c.handleListChange}" />
  <aura:handler name="change" value="{!v.searchString}" action="{!c.doSearch}" />

  <div>

    <div class="slds-page-header">
      <div class="slds-grid">
        <div class="slds-col slds-has-flexi-truncate">
          <div class="slds-media slds-no-space slds-grow">
            <div class="slds-media__figure">
              <lightning:icon size="large" iconName="{!v.iconName}" />
            </div>
            <div class="slds-media__body">
              <div class="slds-picklist slds-dropdown-trigger slds-dropdown-trigger--click">
                <p class="slds-text-title--caps slds-line-height--reset">{!v.title}</p>
                <c:lgnd_ListSelector value="{!v.selectedList}"
                                     listOptions="{!v.availableLists}"
                                     aura:id="listSelector--Cmp" />
              </div>
            </div>
          </div>
        </div>
        <div class="slds-col slds-has-flexi-truncate slds-align-top">
          <div class="slds-grid">
            <div class="slds-col slds-has-flexi-truncate slds-text-align_right">
              <lightning:input type="search"
                               name="searchFilter"
                               label="Filter"
                               value="{!v.searchInputString}"
                               onchange="{!c.handleSearch}"
                               placeholder="Search this list"
                               variant="label-hidden"/>
            </div>
            <aura:if isTrue="{!v.newURL != ''}">
              <div class="slds-col slds-size_2-of-12 slds-align-top slds-text-align_right">
                <button class="slds-button slds-button--neutral" onclick="{!c.navigateToNew}">New</button>
              </div>
            </aura:if>
          </div>
        </div>
      </div>
    </div>

    <table class="slds-table slds-table_bordered slds-table_cell-buffer slds-max-medium-table--stacked " aura:id="listTable">
      <thead>
        <tr class="slds-text-title_caps slds-line-height_reset">
          <aura:iteration items="{!v.fieldDetails}" var="field">
            <th scope="col" class="slds-is-sortable slds-text-align_center">
              <a href="javascript:void(0);"
                 data-field-name="{!field.name}"
                 onclick="{!c.handleSort}"
                 class="{!'slds-th__action slds-text-link_reset' + if( equals(v.sortedCol,field.name), ' isSorted','')}">
                <span class="slds-assistive-text">Sort </span>
                <span class="slds-truncate" title="{!field.name}">{!field.name}</span>
                <lightning:icon iconName="{!if( equals(v.sortDir, 'DESC'), 'utility:arrowdown', 'utility:arrowup')}" size="x-small" />
                <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>
              </a>
            </th>
          </aura:iteration>
          <th scope="col" style="width:3.25rem;">
            <div class="slds-th__action">
              <span class="slds-assistive-text">Actions</span>
            </div>
          </th>
        </tr>
      </thead>
      <tbody>
        <aura:iteration items="{!v.records}" var="rec">
          <tr>
            <aura:iteration items="{!v.fieldDetails}" var="field" indexVar="idx">
              <c:lgnd_CommunityObjectTableCell record="{!rec}"
                                               field="{!field.apiName}"
                                               fieldType="{!field.type}"
                                               fieldName="{!field.name}"
                                               isViewLink="{! equals(idx,0)}"
                                               viewURL="{!v.viewURL}" />
            </aura:iteration>
            <td role="gridcell" class="action-cell">
              <lightning:buttonMenu menuAlignment="right"
                                    onselect="{!c.handleTableAction }">
                  <lightning:menuItem label="View" value="{! 'view:' + rec.Id }" />
                  <!-- <lightning:menuItem label="Edit" value="{! 'edit:' + rec.Id }" />
                  <lightning:menuItem label="Delete" value="{! 'delete:' + rec.Id }" /> -->
              </lightning:buttonMenu>
            </td>
          </tr>
        </aura:iteration>
      </tbody>

    </table>

    <div class="pagination slds-grid loading" aura:id="paginationRow">
      <div class="slds-col slds-large-size_4-of-12">
        <lightning:select name="pageSelect" label="Records per page" value="{!v.perPage}" onchange="{!c.perPageChanged}">
          <option value="15">15</option>
          <option value="25">25</option>
          <option value="50">50</option>
          <option value="100">100</option>
        </lightning:select>
      </div>
      <div class="slds-col slds-large-size_4-of-12">
        <lightning:select name="pageSelect" label="Page " value="{!v.pageNumber}" onchange="{!c.pageNumChanged}">
          <aura:iteration items="{!v.pageOptions}" var="po">
            <option value="{!po}">{!po}</option>
          </aura:iteration>
        </lightning:select>
        <label class="slds-form-element__label">
          of {!v.totalPages}
        </label>
      </div>
      <div class="slds-col slds-large-size_4-of-12">
        <lightning:buttonGroup >
          <aura:if isTrue="{!v.pageNumber > 1}">
            <lightning:button iconName="utility:chevronleft"
                              iconPosition="left"
                              label="Prev"
                              onclick="{!c.prevPage}"/>
          </aura:if>
          <aura:if isTrue="{! and( v.totalPages > 1, v.pageNumber lt v.totalPages)}">
            <lightning:button iconName="utility:chevronright"
                              iconPosition="right"
                              label="Next"
                              onclick="{!c.nextPage}" />
          </aura:if>
        </lightning:buttonGroup>
      </div>
    </div>
  </div>
  <br/>
  <br/>


</aura:component>