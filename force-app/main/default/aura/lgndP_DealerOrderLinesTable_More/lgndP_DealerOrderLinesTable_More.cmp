              <lightning:buttonMenu menuAlignment="right"
                                    onselect="{! c.handleTableAction }">
                <lightning:menuItem label="View"
                                    value="{! 'view:' + item.orderGroupId }" />
                <aura:if isTrue="{! v.isEditable}">
