<aura:component >
  <aura:attribute name="boats" type="Array" />
  <aura:attribute name="motors" type="Array" />
  <aura:attribute name="trailers" type="Array"   />
  <aura:attribute name="trollingMotors" type="Array" />
  <aura:attribute name="orderTotal" type="Decimal" />
  <aura:attribute name="isEditable" type="Boolean" default="false" />

  <aura:registerEvent name="actionEvent" type="c:lgndP_DealerOrderLinesTableAction_Event" />
  <aura:registerEvent name="deleteEvent" type="c:lgndP_DealerOrderLinesTable_Delete_Event" />

  <table class="slds-table
                slds-table--bordered
                slds-no-row-hover
                slds-table--cell-buffer
                slds-max-medium-table--stacked ">
    <thead>
      <tr class="slds-text-title--caps">
        <th scope="col" class="slds-size--1-of-12">
          <div>Quantity</div>
        </th>
        <th scope="col">
          <div>Items</div>
        </th>
        <th class="slds-size--1-of-12">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <!-- +++++ BOAT LINES ++++++++ -->
      <aura:if isTrue="{! !empty(v.boats)}">
        <aura:iteration items="{!v.boats}" var="item">
          <tr>
            <td data-label="Quantity">{!item.quantity}</td>
            <td>
              <!-- Boat Line -->
              <div class="slds-grid slds-wrap boat">
                <div class="slds-col slds-size_9-of-12 majorItem">
                  {!item.boat.name}
                </div>
                <div class="slds-col slds-size_3-of-12 majorItem slds-text-align_right slds-p-right_small">
                  <c:lgnd_currencyDisplay value="{!item.boat.cost}"
                                          zeroLabel="Included" />
                </div>
              </div>

              <!-- Motor Line -->
              <aura:if isTrue="{! !empty(item.motor) }">
                <div class="slds-grid slds-wrap">
                  <div class="slds-col slds-size_9-of-12">
                    <div class="sub-item">
                      {!item.motor.name}
                    </div>
                  </div>
                  <div class="slds-col slds-size_3-of-12 slds-text-align_right slds-p-right_small">
                    <c:lgnd_currencyDisplay value="{!item.motor.cost}"
                                            zeroLabel="Legend - Mercury Special Programs" />
                  </div>
                </div>
                <aura:iteration items="{!item.motor.options}" var="subOpt" indexVar="subIdx">
                  <div class="slds-grid slds-wrap kit-part">
                    <div class="slds-col slds-size_9-of-12">
                      <div class="{! join(' ', 'sub-item kit-item', concat('kit-item-',subIdx))}">
                        {!subOpt.more_name}
                      </div>
                    </div>
                    <div class="slds-col slds-size_3-of-12 slds-text-align_right slds-p-right_small">
                      <c:lgnd_currencyDisplay value="{!subOpt.cost}"
                                              zeroLabel="Included" />
                    </div>
                  </div>
                </aura:iteration>
              </aura:if>


              <!-- Trailer Line -->
              <aura:if isTrue="{! !empty(item.trailer) }">
                <div class="slds-grid slds-wrap">
                  <div class="slds-col slds-size_9-of-12">
                    <div class="sub-item">
                      {!item.trailer.name}
                    </div>
                  </div>
                  <div class="slds-col slds-size_3-of-12 slds-text-align_right slds-p-right_small">
                    <c:lgnd_currencyDisplay value="{!item.trailer.cost}"
                                            zeroLabel="Included" />
                  </div>
                </div>
                <aura:if isTrue="{! !empty(item.trailer.options) }">
                  <aura:iteration items="{!item.trailer.options}" var="subOpt" indexVar="subIdx">
                    <div class="slds-grid slds-wrap kit-part">
                      <div class="slds-col slds-size_9-of-12">
                        <div class="{! join(' ', 'sub-item kit-item', concat('kit-item-',subIdx))}">
                          {!subOpt.more_name}
                        </div>
                      </div>
                      <div class="slds-col slds-size_3-of-12 slds-text-align_right slds-p-right_small">
                        <c:lgnd_currencyDisplay value="{!subOpt.cost}"
                                                zeroLabel="Included" />
                      </div>
                    </div>
                  </aura:iteration>
                </aura:if>
              </aura:if>

              <!-- Trolling Motor Line -->
              <aura:if isTrue="{! !empty(item.trollingMotor) }">
                <div class="slds-grid slds-wrap">
                  <div class="slds-col slds-size_9-of-12">
                    <div class="sub-item">
                      {!item.trollingMotor.name}
                    </div>
                  </div>
                  <div class="slds-col slds-size_3-of-12 slds-text-align_right slds-p-right_small">
                    <c:lgnd_currencyDisplay value="{!item.trollingMotor.cost}"
                                            zeroLabel="Included" />
                  </div>
                </div>
                <aura:iteration items="{!item.trollingMotor.options}" var="subOpt" indexVar="subIdx">
                  <div class="slds-grid slds-wrap kit-part">
                    <div class="slds-col slds-size_9-of-12">
                      <div class="{! join(' ', 'sub-item kit-item', concat('kit-item-',subIdx))}">
                        {!subOpt.more_name}
                      </div>
                    </div>
                    <div class="slds-col slds-size_3-of-12 slds-text-align_right slds-p-right_small">
                      <c:lgnd_currencyDisplay value="{!subOpt.cost}"
                                              zeroLabel="Included" />
                    </div>
                  </div>
                </aura:iteration>
              </aura:if>

              <!-- Options Lines -->
              <aura:if isTrue="{! !empty(item.options) }">
                <c:lgndP_OptionLine_More options="{!item.options}" />
              </aura:if>

              <!-- Fees Lines -->
              <aura:if isTrue="{! !empty(item.fees) }">
                <aura:iteration items="{!item.fees}" var="fee">
                  <div class="slds-grid slds-wrap fee-row">
                    <div class="slds-col slds-size_9-of-12">
                      <div class="sub-item">
                        {!fee.name}
                      </div>
                    </div>
                    <div class="slds-col slds-size_3-of-12 slds-text-align_right slds-p-right_small">
                      <c:lgnd_currencyDisplay value="{!fee.cost}"
                                              zeroLabel="Included" />
                    </div>
                  </div>
                </aura:iteration>
              </aura:if>

              <!-- Discount Lines -->
              <aura:if isTrue="{! !empty(item.discounts) }">

                <aura:iteration items="{!item.discounts}" var="disc">
                  <div class="slds-grid slds-wrap discount-row">
                    <div class="slds-col slds-size_9-of-12">
                      <div class="sub-item">
                        {!disc.name}
                      </div>
                    </div>
                    <div class="slds-col slds-size_3-of-12 slds-text-align_right slds-p-right_small">
                      <c:lgnd_currencyDisplay value="{!disc.cost}"
                                              zeroLabel="Included" />
                    </div>
                  </div>
                </aura:iteration>

              </aura:if>

              <!-- Notes and Totals -->
              <div class="slds-grid slds-wrap total-row">

                <!-- Notes -->
                <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-2 slds-large-size_1-of-2">
                  <aura:if isTrue="{! !empty(item.notes)}">
                    <div class="slds-text-title_caps slds-m-top_small">Notes</div>
                    <div class="slds-p-around_small
                                slds-m-right_small
                                slds-card
                                notes-container">
                      <aura:unescapedHtml value="{!item.notes}" />
                    </div>
                  </aura:if>
                </div>

                <!-- Totals -->
                <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-2 slds-large-size_1-of-2">

                  <aura:if isTrue="{! !empty(item.discounts) }">
                    <!-- Total Before Savings -->
                    <div class="slds-grid slds-wrap total-row border-top">
                      <div class="slds-col
                                slds-size_1-of-1
                                slds-text-align_right
                                slds-p-right_small
                                sub-total-cell">
                        <span class="slds-float_left slds-p-left_medium">
                          Total Before Savings
                        </span>
                        <c:lgnd_currencyDisplay value="{!item.totalBeforeSavings}"
                                              zeroLabel="0" />
                      </div>
                    </div>

                    <!-- Total Savings -->
                    <div class="slds-grid slds-wrap total-row">
                      <div class="slds-col
                                slds-size_1-of-1
                                slds-text-align_right
                                slds-p-right_small
                                sub-total-cell green">
                        <span class="slds-float_left slds-p-left_medium">
                          Total Savings
                        </span>
                        <c:lgnd_currencyDisplay value="{!item.totalSavings}"
                                              zeroLabel="0" />
                      </div>
                    </div>
                  </aura:if>

                  <!-- Individual Total -->
                  <div class="slds-grid slds-wrap total-row">
                    <div class="slds-col
                                slds-size_1-of-1
                                slds-text-align_right
                                slds-p-right_small
                                sub-total-cell grey">
                        <span class="slds-float_left slds-p-left_medium">Individual Total</span>
                        <c:lgnd_currencyDisplay value="{!add(item.totalBeforeSavings, item.totalSavings)}"
                                              zeroLabel="0" />
                    </div>
                  </div>

                  <!-- TOTAL -->
                  <div class="slds-grid slds-wrap total-row">
                    <div class="slds-col
                                slds-size_1-of-1
                                slds-text-align_right
                                slds-p-right_small
                                total-cell">
                        <span class="slds-float_left slds-p-left_medium">TOTAL</span>
                        <c:lgnd_currencyDisplay value="{!item.grandTotal}"
                                              zeroLabel="0" />
                    </div>
                  </div>

                </div>

              </div>

            </td>
            <td data-label="Actions" class="action-cell slds-text-align--right">
              <lightning:buttonMenu menuAlignment="right"
                                    onselect="{! c.handleTableAction }">
                  <lightning:menuItem label="View"
                                      value="{! 'view:' + item.orderGroupId }" />
                  <aura:if isTrue="{! v.isEditable}">
                    <lightning:menuItem label="Edit"
                                        value="{! 'edit:' + item.orderGroupId }" />
                    <lightning:menuItem label="Delete"
                                        value="{! 'delete:' + item.orderGroupId + ':boats' }"/>
                  </aura:if>
              </lightning:buttonMenu>
            </td>
          </tr>
        </aura:iteration>
      </aura:if>

      <!-- +++++ MOTOR LINES ++++++++ -->
