              <!-- Discount Lines -->
              <aura:if isTrue="{! !empty(item.discounts) }">

                <aura:iteration items="{!item.discounts}" var="disc">
                  <div class="slds-grid slds-wrap discount-row">
                    <div class="slds-col slds-size_9-of-12">
                      <div class="sub-item">
                        {!disc.name}
                      </div>
                    </div>
                    <div class="slds-col slds-size_3-of-12 slds-text-align_right slds-p-right_small">
                      <c:lgnd_currencyDisplay value="{!disc.cost}"
                                              zeroLabel="Included" />
                    </div>
                  </div>
                </aura:iteration>

              </aura:if>

              <!-- Notes and Totals -->
              <div class="slds-grid slds-wrap total-row">

                <!-- Notes -->
                <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-2 slds-large-size_1-of-2">
                  <aura:if isTrue="{! !empty(item.notes)}">
                    <div class="slds-text-title_caps slds-m-top_small">Notes</div>
                    <div class="slds-p-around_small
                                slds-m-right_small
                                slds-card
                                notes-container">
                      <aura:unescapedHtml value="{!item.notes}" />
                    </div>
                  </aura:if>
                </div>

                <!-- Totals -->
                <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-2 slds-large-size_1-of-2">

                  <aura:if isTrue="{! !empty(item.discounts) }">
                    <!-- Total Before Savings -->
                    <div class="slds-grid slds-wrap total-row border-top">
                      <div class="slds-col
                                slds-size_1-of-1
                                slds-text-align_right
                                slds-p-right_small
                                sub-total-cell">
                        <span class="slds-float_left slds-p-left_medium">
                          Total Before Savings
                        </span>
                        <c:lgnd_currencyDisplay value="{!item.totalBeforeSavings}"
                                                zeroLabel="Included" />(ea.)
                      </div>
                    </div>

                    <!-- Total Savings -->
                    <div class="slds-grid slds-wrap total-row">
                      <div class="slds-col
                                slds-size_1-of-1
                                slds-text-align_right
                                slds-p-right_small
                                sub-total-cell green">
                        <span class="slds-float_left slds-p-left_medium">
                          Total Savings
                        </span>
                        <c:lgnd_currencyDisplay value="{!item.totalSavings}"
                                                zeroLabel="Included" />
                      </div>
                    </div>
                  </aura:if>

                  <!-- Individual Total -->
                  <div class="slds-grid slds-wrap total-row">
                    <div class="slds-col
                                slds-size_1-of-1
                                slds-text-align_right
                                slds-p-right_small
                                sub-total-cell grey">
                      <span class="slds-float_left slds-p-left_medium">Individual Total</span>
                      <c:lgnd_currencyDisplay value="{!add(item.totalBeforeSavings, item.totalSavings)}"
                                              zeroLabel="0" />
                    </div>
                  </div>

                  <!-- TOTAL -->
                  <div class="slds-grid slds-wrap total-row">
                    <div class="slds-col
                                slds-size_1-of-1
                                slds-text-align_right
                                slds-p-right_small
                                total-cell">
                      <span class="slds-float_left slds-p-left_medium">TOTAL</span>
                      <c:lgnd_currencyDisplay value="{!item.grandTotal}"
                                              zeroLabel="0" />
                    </div>
                  </div>

                </div>

              </div>

            </td>
            <td data-label="Actions" class="action-cell slds-text-align--right">
              <lightning:buttonMenu menuAlignment="right"
                                    onselect="{! c.handleTableAction }">
                <lightning:menuItem label="View"
                                    value="{! 'view:' + item.orderGroupId }" />
                <aura:if isTrue="{! v.isEditable}">
                  <lightning:menuItem label="Edit"
                                      value="{! 'edit:' + item.orderGroupId }" />
                  <lightning:menuItem label="Delete"
                                      value="{! 'delete:' + item.orderGroupId + ':trollingMotors' }"/>
                </aura:if>
              </lightning:buttonMenu>
            </td>
          </tr>
        </aura:iteration>
      </aura:if>
    </tbody>
  </table>

</aura:component>