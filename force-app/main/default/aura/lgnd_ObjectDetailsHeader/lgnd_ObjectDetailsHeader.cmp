<!--                <lightning:formattedNumber value="{!field.value}"-->
<!--                                           style="currency"-->
<!--                                           currencyCode="CAD" />-->
<!--              </aura:if>-->
<!--            </p>-->
<!--          </li>-->
<!--        </aura:iteration>-->
<!--      </ul>-->
    </aura:if>
  </div>

  <div class="slds-page-header slds-page-header_vertical slds-hide_medium">
    <div class="slds-grid slds-grid_vertical">
      <div>
        <div class="slds-media slds-no-space slds-has-divider_bottom-space slds-media_center">
          <div class="slds-media__figure">
            <lightning:icon size="large" iconName="{!v.iconName}" />
          </div>
          <div class="slds-media__body">
            <p class="slds-text-title_caps slds-line-height_reset">
              {!v.title}
            </p>
            <h1 class="slds-page-header__title
                       slds-m-right_small
                       slds-align-middle
                       slds-truncate"
                 title="{!v.recordName}">
              {!v.recordName}
            </h1>
          </div>
        </div>
      </div>
      <div class="slds-has-divider_bottom-space">
        <div class="slds-button-group" role="group">
          <button class="slds-button slds-button_neutral"
                  onclick="{!c.returnToList}">
            Return
          </button>
          <aura:if isTrue="{!v.canEdit}">
            <button class="slds-button slds-button_neutral"
                    onclick="{!c.editHandler}">Edit</button>
          </aura:if>
          <aura:if isTrue="{!v.canDelete}">
            <button class="slds-button slds-button_neutral"
                    onclick="{!c.deleteHandler}">Delete</button>
          </aura:if>
        </div>
      </div>
    </div>
    <lightning:recordViewForm objectApiName="Case" recordId="{!v.recordId}" class="slds-list_vertical-space-medium slds-m-left_xx-small">
      <aura:iteration items="{!v.displayFieldData}" var="field">
        <lightning:outputField fieldName="{!field.name}" class="slds-item" />
      </aura:iteration>
    </lightning:recordViewForm>
