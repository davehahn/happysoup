<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>New_Lead_Notification</fullName>
        <description>New Lead Notification</description>
        <protected>false</protected>
        <recipients>
            <recipient>bmacarthur@legendboats.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>jduhamel@legendboats.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Invitations_and_Individual_Follow_Ups/Lead_Follow_Up_Barrie</template>
    </alerts>
    <fieldUpdates>
        <fullName>UpdateLeadPartnerEmail</fullName>
        <field>PartnerEmail__c</field>
        <formula>Closest_Partner__r.AccountEmail__c</formula>
        <name>UpdateLeadPartnerEmail</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>Dealer Lead Olark Follow Up</fullName>
        <actions>
            <name>Follow_up_with_Dealer_Lead_Olark</name>
            <type>Task</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Lead.LeadSource</field>
            <operation>equals</operation>
            <value>Olark</value>
        </criteriaItems>
        <description>The process to follow when you enter a Dealer Lead you met on Olark</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Dealer Lead Phone In Follow Up</fullName>
        <actions>
            <name>Follow_Up_with_Dealer_Lead</name>
            <type>Task</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Lead.LeadSource</field>
            <operation>equals</operation>
            <value>Dealer Lead Phone In</value>
        </criteriaItems>
        <description>When answering the phone, if you refer a customer to a Dealer Sales Department, notify the Dealer to call this customer.  Once the Lead is input into Salesforce, you are to follow up with the customer after 24 hours.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>UpdateLeadPartnerEmail</fullName>
        <actions>
            <name>UpdateLeadPartnerEmail</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>NOT(ISBLANK(Closest_Partner__c))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <tasks>
        <fullName>Follow_Up_with_Dealer_Lead</fullName>
        <assignedToType>owner</assignedToType>
        <description>This is to follow up with a customer that called the Headquarters and was referred to their closest Dealer.  The person answering the call was to have called the Dealer in question, given them the customer&#39;s info and requested they call the customer.</description>
        <dueDateOffset>1</dueDateOffset>
        <notifyAssignee>true</notifyAssignee>
        <offsetFromField>Lead.CreatedDate</offsetFromField>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Open</status>
        <subject>Follow Up with Dealer Lead</subject>
    </tasks>
    <tasks>
        <fullName>Follow_up_with_Dealer_Lead_Olark</fullName>
        <assignedToType>owner</assignedToType>
        <dueDateOffset>1</dueDateOffset>
        <notifyAssignee>true</notifyAssignee>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Open</status>
        <subject>Follow up with Dealer Lead - Olark</subject>
    </tasks>
</Workflow>
