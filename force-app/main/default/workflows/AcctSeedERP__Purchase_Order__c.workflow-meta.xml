    <rules>
        <fullName>Go create AP</fullName>
        <actions>
            <name>Go_create_the_correspondng_AP</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Go_create_AP</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>AcctSeedERP__Purchase_Order__c.Stage__c</field>
            <operation>equals</operation>
            <value>Partially Received,Received</value>
        </criteriaItems>
        <description>create accounts payable according to partially received or received items from a purchase order</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Locked_If_Not_Open</fullName>
        <actions>
            <name>Locked_If_Not_Open</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>(3 OR 1) AND 2</booleanFilter>
        <criteriaItems>
            <field>AcctSeedERP__Purchase_Order__c.AcctSeedERP__Status__c</field>
            <operation>notEqual</operation>
            <value>Open</value>
        </criteriaItems>
        <criteriaItems>
            <field>AcctSeedERP__Purchase_Order__c.Locked__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>AcctSeedERP__Purchase_Order__c.Stage__c</field>
            <operation>notEqual</operation>
            <value>New</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Purchase Order Pending Approval</fullName>
