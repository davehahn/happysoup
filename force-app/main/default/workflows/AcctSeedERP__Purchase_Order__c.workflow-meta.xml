            <field>AcctSeedERP__Purchase_Order__c.AcctSeedERP__Status__c</field>
            <operation>equals</operation>
            <value>Pending Approval</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Purchase Order Update Date</fullName>
        <actions>
            <name>Update_Order_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>AcctSeedERP__Purchase_Order__c.Stage__c</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
        <description>Updates the date to current date when Submitted stage is activated</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
