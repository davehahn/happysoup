    <rules>
        <fullName>A Dealer load has been planned</fullName>
        <actions>
            <name>A_new_dealer_load_has_been_planned_and_scheduled</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Truck_Trip__c.Departure_Date__c</field>
            <operation>lessOrEqual</operation>
            <value>NEXT 14 DAYS</value>
        </criteriaItems>
        <description>A new trip has been planned/scheduled and we need to begin the process of building, tagging and preparing all necessary paperwork.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>A Dealer load has been scheduled</fullName>
        <actions>
            <name>A_dealer_load_has_been_scheduled</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>A new trip has been planned/scheduled and we need to begin the process of building, tagging and preparing all necessary paperwork.</description>
        <formula>and(  Departure_Date__c &gt;= TODAY(),  Departure_Date__c &lt;= TODAY() + 14)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Pending Barrie load</fullName>
        <actions>
            <name>Pending_Barrie_load</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Truck_Trip__c.Name</field>
            <operation>contains</operation>
            <value>Barrie</value>
        </criteriaItems>
        <description>A Barrie load has been scheduled - please refer to your truck departure report</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
