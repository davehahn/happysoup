<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Email_Notification_to_Parts_Department_MRP_less_than_100</fullName>
        <description>Email Notification to Parts Department MRP less than 100%</description>
        <protected>false</protected>
        <recipients>
            <recipient>dramnath@legendboats.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>epaulino@legendboats.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>Parts_Related/Notifies_Parts_Team_MRP_less_than_100_percent</template>
    </alerts>
    <rules>
        <fullName>MRP Availability Percentage Less than 100</fullName>
        <actions>
            <name>Email_Notification_to_Parts_Department_MRP_less_than_100</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Product_MRP_Value__c.Availability_Percentage__c</field>
            <operation>lessThan</operation>
            <value>100</value>
        </criteriaItems>
        <criteriaItems>
            <field>Product_MRP_Value__c.Product_Record_Type__c</field>
            <operation>contains</operation>
            <value>Part</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
