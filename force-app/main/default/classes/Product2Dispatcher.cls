public with sharing class Product2Dispatcher {

  private final ApexPages.StandardController controller;
  private final Id product2Id;
  private final Product2 prod;
  private String recordTypeName;

  public Product2Dispatcher(ApexPages.StandardController controller) {
    this.controller = controller;
    product2Id = controller.getId();
    prod = (Product2)controller.getRecord();
    recordTypeName = recordTypeNameFromId(prod.RecordTypeId);
  }

  public PageReference getNewRedir() {
    RecordType rt = [SELECT Name
                     FROM RecordType
                     WHERE Id = :ApexPages.currentPage().getParameters().get('RecordType')];
    PageReference newPage;

    if ( rt.Name == 'Boat') {
      //if()
      newPage = Page.BoatForm;
      newPage.setRedirect(true);
      return newPage;
    } else {
      return null;
    }

  }

  public PageReference getEditRedir() {
    Product2 p = [SELECT Id, RecordType.Name
                  FROM Product2
                  WHERE Id = :ApexPages.currentPage().getParameters().get('id')];

    PageReference newPage;

    if (p.RecordType.Name == 'Boat') {
        newPage = Page.BoatForm;
    } else {
        newPage = new PageReference('/' + p.Id + '/e');
        newPage.getParameters().put('nooverride', '1');
        newPage.getParameters().put('retURL', p.Id);
    }

    newPage.getParameters().put('id', p.id);

    return newPage.setRedirect(true);
  }

  public PageReference cloneProduct() {
    if( recordTypeName == 'Boat' )
    {
      return cloneBoat();
    }
    else
    {
       //PageReference pr = new PageReference('/' + product2Id + '/e?clone=1&retURL=/'+ product2Id + '?sfdc.override=1');
      PageReference pr = Page.Product2Form;
      pr.getParameters().put('cloneId', product2Id);
      pr.getParameters().put('Id', null);
      pr.setRedirect(true);
      return pr;
    }
  }

  public PageReference cloneBoat() {
    //Product2 p = [SELECT Id, RecordType.Name
    //              FROM Product2
    //              WHERE Id = :ApexPages.currentPage().getParameters().get('id')];

    PageReference newPage;
    newPage = Page.BoatForm;
    newPage.getParameters().put('cloneId', product2Id);
    newPage.getParameters().put('Id', null);
    newPage.setRedirect(true);
    return newPage;
  }

  private String recordTypeNameFromId(Id rtId)
  {
    Map<Id, Schema.RecordTypeInfo> rt_map = Schema.getGlobalDescribe().get('Product2').getDescribe().getRecordTypeInfosById();
    if( rt_map.keySet().contains(rtId) )
    {
      return rt_map.get(rtId).getName();
    }
    return null;
  }

