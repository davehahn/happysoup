    <description>Creates a task upon Retail ERP creation assigned to the BOM with a due date of 7 days before the end of the month as a reminder to receive payment from the customer.</description>
    <formulas>
        <name>LastDayofMonth</name>
        <dataType>Date</dataType>
        <expression>IF( MONTH( TODAY() ) = 12, 
DATE( YEAR( TODAY() ), 12, 31 ), 
DATE( YEAR( TODAY() ), MONTH( TODAY() ) + 1, 1) - 1)</expression>
    </formulas>
    <formulas>
        <name>LastDayofMonthMinus7</name>
        <dataType>Date</dataType>
        <expression>{!LastDayofMonth} - 7</expression>
    </formulas>
