  @AuraEnabled
  public static Id uploadFileChunck(Id caseId, String fileName, String base64Data, String contentType, String fileId) {
    if (fileId == '') {
      fileId = saveTheFile(caseId, fileName, base64Data, contentType);
    } else {
      fileId = appendToFile(fileId, base64Data);
    }
    return Id.valueOf(fileId);
  }

  @AuraEnabled
  public static void mergeVersions(Id versionId, Id caseId) {
    ContentVersion cv = [
      SELECT Id, ContentDocumentId, VersionData, Title, PathOnClient
      FROM ContentVersion
      WHERE Id = :versionId
    ];
    ContentVersion newCv = new ContentVersion(
      VersionData = cv.VersionData,
      Title = cv.Title,
      PathOnClient = cv.PathOnClient
    );
    insert newCv;
    newCv = [SELECT id, ContentDocumentId FROM ContentVersion WHERE Id = :newCv.Id];
    ContentDocumentLink cl = new ContentDocumentLink();
    cl.ContentDocumentId = newCv.ContentDocumentId;
    cl.LinkedEntityId = caseId;
    cl.ShareType = 'V';
    cl.Visibility = 'AllUsers';
    insert cl;
    ContentDocument cd = [SELECT Id FROM ContentDocument WHERE Id = :cv.ContentDocumentId];
    delete cd;
  }

