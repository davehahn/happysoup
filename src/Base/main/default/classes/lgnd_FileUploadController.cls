  private static Id appendToFile(Id fileId, String base64Data) {
    base64Data = EncodingUtil.urlDecode(base64Data, 'UTF-8');
    ContentVersion cv = [
      SELECT Id, ContentDocumentId, VersionData, Title, PathOnClient
      FROM ContentVersion
      WHERE Id = :fileId
    ];
    //Attachment a = [
    //    SELECT Id, Body
    //    FROM Attachment
    //    WHERE Id = :fileId
    //];
    String existingBody = EncodingUtil.base64Encode(cv.VersionData);
    ContentVersion cv2 = new ContentVersion();
    cv2.Title = cv.title;
    cv2.VersionData = EncodingUtil.base64Decode(existingBody + base64Data);
    cv2.PathOnClient = cv.PathOnClient;
    cv2.ContentDocumentId = cv.ContentDocumentId;
    insert cv2;

    return cv2.Id;
  }

