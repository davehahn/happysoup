  private static void updateAndValidate(
    map<Id, AcctSeedERP__Inventory_Balance__c> oldMap,
    map<Id, AcctSeedERP__Inventory_Balance__c> newMap,
    list<AcctSeedERP__Inventory_Balance__c> listNew,
    Boolean boolIsBefore,
    Boolean boolIsInsert,
    Boolean boolIsUpdate,
    Boolean boolIsDelete
  ) {
    if (!boolIsBefore && (boolIsUpdate || boolIsInsert)) {
      /// Check Negative Quantity
      if (ERP_Order_Settings__c.getOrgDefaults().Inventory_Balance_Check_Negative__c) {
        refreshStatics(listNew);

        for (AcctSeedERP__Inventory_Balance__c bal : listNew) {
          Decimal mfgQty = bal.AcctSeedERP__Manufacturing_Quantity__c == null
            ? 0
            : bal.AcctSeedERP__Manufacturing_Quantity__c;
          Decimal purQty = bal.AcctSeedERP__Purchasing_Quantity__c == null
            ? 0
            : bal.AcctSeedERP__Purchasing_Quantity__c;
          Decimal inbQty = bal.AcctSeedERP__Inbound_Quantity__c == null ? 0 : bal.AcctSeedERP__Inbound_Quantity__c;

          Decimal soQty = bal.AcctSeedERP__Sales_Order_Quantity__c == null
            ? 0
            : bal.AcctSeedERP__Sales_Order_Quantity__c;
          Decimal outQty = bal.AcctSeedERP__Outbound_Quantity__c == null ? 0 : bal.AcctSeedERP__Outbound_Quantity__c;

          if ((mfgQty + purQty + inbQty) < (soQty + outQty)) {
            String productName = '';
            if (bal.AcctSeedERP__Product__c != null && mapProduct.containsKey(bal.AcctSeedERP__Product__c)) {
              productName = mapProduct.get(bal.AcctSeedERP__Product__c).Name;
            }
            bal.addError(
              'The aggregate outbound quantity on the inventory balance cannot be more than the aggregate inbound quantity for Product ' +
              productName
            );
          }
        }
      }
    }
  }

  private static map<Id, Product2> mapProduct;

  private static void refreshStatics(list<AcctSeedERP__Inventory_Balance__c> listNew) {
    if (mapProduct == null) {
      mapProduct = new Map<Id, Product2>();
    }
    set<Id> setIdProduct = new Set<Id>();
    for (AcctSeedERP__Inventory_Balance__c bal : listNew) {
      if (bal.AcctSeedERP__Product__c != null && !mapProduct.containsKey(bal.AcctSeedERP__Product__c))
        setIdProduct.add(bal.AcctSeedERP__Product__c);
    }
    setIdProduct.remove(null);

    for (Product2 p : [SELECT Id, Name FROM Product2 WHERE Id IN :setIdProduct]) {
      mapProduct.put(p.Id, p);
    }
  }

