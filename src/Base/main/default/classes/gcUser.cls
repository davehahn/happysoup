  private static void updateAndValidate(
    map<Id, User> oldMap,
    map<Id, User> newMap,
    list<User> listNew,
    Boolean boolIsBefore,
    Boolean boolIsInsert,
    Boolean boolIsUpdate,
    Boolean boolIsDelete
  ) {
    if (boolIsBefore && (boolIsInsert || boolIsUpdate)) {
      Map<String, Boolean> mapNameGLV1 = new Map<String, Boolean>();
      Map<String, Boolean> mapNameWarehouse = new Map<String, Boolean>();
      for (User u : listNew) {
        if (
          u.GL_Account_Variable_1__c != null &&
          (boolIsInsert || (boolIsUpdate && u.GL_Account_Variable_1__c != oldMap.get(u.Id).GL_Account_Variable_1__c))
        )
          mapNameGLV1.put(u.GL_Account_Variable_1__c, false);

        if (
          u.Warehouse__c != null && (boolIsInsert || (boolIsUpdate && u.Warehouse__c != oldMap.get(u.Id).Warehouse__c))
        )
          mapNameWarehouse.put(u.Warehouse__c, false);
      }

      if (!mapNameGLV1.isEmpty()) {
        /// Load GLV1 Map
        for (AcctSeed__Accounting_Variable__c glv : [
          SELECT Name
          FROM AcctSeed__Accounting_Variable__c
          WHERE Name IN :mapNameGLV1.keySet() AND AcctSeed__Type__c = 'GL Account Variable 1'
        ]) {
          mapNameGLV1.put(glv.Name, true);
        }
        /// Validate GLV1 Name
        for (User u : listNew) {
          if (!mapNameGLV1.isEmpty())
            if (
              u.GL_Account_Variable_1__c != null &&
              (boolIsInsert ||
              (boolIsUpdate && u.GL_Account_Variable_1__c != oldMap.get(u.Id).GL_Account_Variable_1__c)) &&
              !mapNameGLV1.get(u.GL_Account_Variable_1__c)
            )
              u.GL_Account_Variable_1__c.addError(
                'The value selected for Business Unit (GLV1) does not correspond to an Accounting Variable of Type 1'
              );
        }
      }

      if (!mapNameWarehouse.isEmpty()) {
        /// Load Warehouse Map
        Id idWarehouseAdjustment = GMBLASERP__Inventory_Settings__c.getOrgDefaults()
          .GMBLASERP__Adjustment_Warehouse_Id__c;
        Id idWarehouseTransit = GMBLASERP__Inventory_Settings__c.getOrgDefaults().GMBLASERP__Transit_Warehouse_Id__c;
        for (AcctSeedERP__Warehouse__c whs : [
          SELECT Name
          FROM AcctSeedERP__Warehouse__c
          WHERE Name IN :mapNameWarehouse.keySet() AND (Id != :idWarehouseAdjustment OR Id != :idWarehouseTransit)
        ]) {
          mapNameWarehouse.put(whs.Name, true);
        }
        /// Validate Warehouse Name
        for (User u : listNew) {
          if (
            u.Warehouse__c != null &&
            (boolIsInsert || (boolIsUpdate && u.Warehouse__c != oldMap.get(u.Id).Warehouse__c)) &&
            !mapNameWarehouse.get(u.Warehouse__c)
          )
            u.Warehouse__c.addError('The value selected for Warehouse does not correspond to the name of a Warehouse.');
        }
      }
    }
  }

