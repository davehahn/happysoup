public with sharing class ProductDetailExt
{

  public Product2 product;
  public final Id productId;
  public final List<Pricebook2> availablePricebooks;
  public List<Product_Upgrade__c> upgrades { get; private set;}
  public Id selectedPb { get; set; }
  public String currentRetailPrice { get; private set; }

  // The extension constructor initializes the private member
  // variable mysObject by using the getRecord method from the standard
  // controller.
  public ProductDetailExt(ApexPages.StandardController stdController) {
    this.productId = stdController.getId();
    this.availablePricebooks = [SELECT Id, Name FROM Pricebook2 WHERE isActive = true];
    selectedPb = [SELECT Id
                    FROM Pricebook2
                    WHERE Id = :Legend_Settings__c.getOrgDefaults().Default_Retail_Pricebook__c].Id;
    this.currentRetailPrice = findCurrentRetailPrice();
    this.upgrades = fetchUpgrades();
  }


  /* ++++++++++ Rendering Methods ++++++++++ */

  public SelectOption[] getPricebookOptions()
  {
    List<SelectOption> options = new List<SelectOption>();
    for(Pricebook2 pb : availablePricebooks )
    {
      options.add( new SelectOption(pb.Id, pb.Name) );
    }
    return options;
  }

  /* ========== Rendering Methods ========== */

  public void pricebookChanged()
  {
    selectedPb = ApexPages.currentPage().getParameters().get('pricebookId');
    this.upgrades = fetchUpgrades();
  }


  private List<Product_Upgrade__c> fetchUpgrades()
  {
    return [SELECT Id, To_Product__c, To_Product__r.Name,
            (SELECT Id, Cost__c FROM Product_Upgrade_Costs__r WHERE Price_Book__c = :selectedPb)
            FROM Product_Upgrade__c
            WHERE From_Product__c = :productId];
  }

  private String findCurrentRetailPrice()
  {
    try
    {
      PricebookEntry pbe = [SELECT Id, UnitPrice
                            FROM PricebookEntry
                            WHERE Pricebook2Id = :Legend_Settings__c.getOrgDefaults().Default_Retail_Pricebook__c
                            AND Product2Id = :productId];
      return '$ ' + String.valueOf( pbe.UnitPrice );
    }
    catch(Exception e)
    {
      return 'Price not Set';
    }
  }

