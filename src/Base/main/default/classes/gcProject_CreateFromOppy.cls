global class gcProject_CreateFromOppy {
  private Id idFilter { get; set; }
  private String retUrl { get; set; }

  global gcProject_CreateFromOppy() {
    idFilter = ApexPages.currentPage().getParameters().get('idOppy');
    retUrl = '/' + idFilter;
  }
  global gcProject_CreateFromOppy(ApexPages.StandardController stc) {
    retUrl = '/' + stc.getId();
  }

  public pageReference back() {
    return new pageReference(retUrl);
  }

  global PageReference createProject() {
    Id idOppy = ApexPages.currentPage().getParameters().get('idOppy');

    Opportunity oppy = [SELECT Id, Approved__c FROM Opportunity WHERE Id = :idOppy][0];
    if (!oppy.Approved__c) {
      ApexPages.addMessage(
        new ApexPages.message(
          ApexPages.severity.ERROR,
          'Cannot create ERP order from this Opportunity. It is not approved yet.'
        )
      );
      return null;
    }

    for (Trade_In_Item__c ti : [
      SELECT Id
      FROM Trade_In_Item__c
      WHERE Trade_In_Record__r.Opportunity__c = :idOppy
      LIMIT 1
    ])
      return new pageReference('/apex/gpOpportunityTradeIn?Id=' + idOppy);

    for (AcctSeed__Project__c p : [SELECT Id FROM AcctSeed__Project__c WHERE AcctSeed__Opportunity__c = :idOppy]) {
      ApexPages.addMessage(
        new ApexPages.message(ApexPages.severity.ERROR, 'This Opportunity already has underlying Work Order(s).')
      );
      return null;
    }

    Id idProject = createProject2(idOppy);

    return new pageReference('/' + idProject);
  }

  global static Id createProject2(Id idOppy) {
    /// Adding a validation first to check Retail ERP SFISSUES-499
    Application_RecordType.ERPOrderRTs erpRts = new Application_RecordType().getERPOrderRecordTypes();
    Set<Id> setIDRTs = new Set<Id>{ erpRts.getRetailBoatSaleId(), erpRts.getPartnerRetailBoatSaleId() };
    AcctSeed__Project__c retailProject;
    for (AcctSeed__Project__c reProject : [
      SELECT Id
      FROM AcctSeed__Project__c
      WHERE AcctSeed__Opportunity__c = :idOppy AND RecordTypeId IN :setIDRTs
      LIMIT 1
    ]) {
      retailProject = reProject;
    }
    if (retailProject == null)
      return Project_Service.newFromOpportunityId(idOppy).Id;
    else
      return retailProject.Id;
  }

