<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Commission_Auto_Accept</fullName>
        <description>Auto Accept the commission on behalf of the Commission Receiver</description>
        <field>Was_Auto_Accepted__c</field>
        <literalValue>1</literalValue>
        <name>Commission Auto Accept</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Commission Auto Accept</fullName>
        <active>true</active>
        <criteriaItems>
            <field>CommissionRecord__c.Stage__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <description>Automatically accepts the commission on behalf of the commission receiver 7 days after the Accounting has approved</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Commission_Auto_Accept</name>
                <type>FieldUpdate</type>
            </actions>
            <timeLength>7</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Retail Sales Commission Reminder</fullName>
        <active>false</active>
        <description>Sends out a reminder to approve Commissions if within 7 days of delivery date.</description>
        <formula>ERP_Order__r.Delivery_Date__c  - NOW()&lt;= 7   &amp;&amp;   ISBLANK(Approved_By_Sales__c )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
