<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Warranty_Deficiency_Alert</fullName>
        <description>Warranty Deficiency Alert</description>
        <protected>false</protected>
        <recipients>
            <recipient>drowe@legendboats.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>zzzmelcorcoran@legendboats.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Case_Templates/Billing_Warranty_Deficiency_Template</template>
    </alerts>
    <fieldUpdates>
        <fullName>GMBLASG__SET_AR_Status_Approved</fullName>
        <field>AcctSeed__Status__c</field>
        <literalValue>Approved</literalValue>
        <name>SET AR Status = Approved</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>GMBLASG__SET AR Status %3D Approved</fullName>
        <actions>
            <name>GMBLASG__SET_AR_Status_Approved</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>TEXT(AcctSeed__Status__c) != &apos;Posted&apos;</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Warranty Deficiency</fullName>
        <actions>
            <name>Warranty_Deficiency_Alert</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>AcctSeed__Billing__c.Stage__c</field>
            <operation>equals</operation>
            <value>Warranty Difficiency</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
