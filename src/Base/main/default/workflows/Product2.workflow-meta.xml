<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Part_Creation_Approved_Email</fullName>
        <description>Part Creation Approved Email</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Parts_Related/Part_Creation_Approved</template>
    </alerts>
    <alerts>
        <fullName>Part_Creation_Rejection_Email</fullName>
        <description>Part Creation Rejection Email</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Dealer_Templates/Part_Creation_Rejection</template>
    </alerts>
    <fieldUpdates>
        <fullName>Activate_Part</fullName>
        <description>Set Activate field to True</description>
        <field>IsActive</field>
        <literalValue>1</literalValue>
        <name>Activate Part</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Ensure_Inactive</fullName>
        <description>Make Active field false until approved</description>
        <field>IsActive</field>
        <literalValue>0</literalValue>
        <name>Ensure Inactive</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Set_Approved_For_Use</fullName>
        <description>Set Status field to Approved for Use</description>
        <field>Status__c</field>
        <literalValue>Approved for Use</literalValue>
        <name>Set Approved For Use</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <tasks>
        <fullName>MRP_Quantity_on_on_this_Product_has_dropped_below_0</fullName>
        <assignedTo>epaulino@legendboats.com</assignedTo>
        <assignedToType>user</assignedToType>
        <description>Please review this product as the MRP Quantity has dropped below 0 which means we have none in stock or more allocated than we have stock.</description>
        <dueDateOffset>0</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Open</status>
        <subject>MRP Quantity on on this Product has dropped below 0</subject>
    </tasks>
</Workflow>
