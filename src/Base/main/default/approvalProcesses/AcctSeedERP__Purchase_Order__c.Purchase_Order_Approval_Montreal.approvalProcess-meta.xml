<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>CreatedBy</field>
        <field>Owner</field>
        <field>GMBLASERP__Project__c</field>
        <field>AcctSeedERP__Order_Date__c</field>
        <field>Stage__c</field>
        <field>AcctSeedERP__Status__c</field>
        <field>GMBLASERP__Pricebook__c</field>
        <field>Pricebook_Name__c</field>
        <field>AcctSeedERP__Total__c</field>
        <field>AcctSeedERP__Comment__c</field>
        <field>AcctSeedERP__Vendor__c</field>
        <field>AcctSeedERP__Vendor_Street__c</field>
        <field>AcctSeedERP__Vendor_City__c</field>
        <field>AcctSeedERP__Vendor_Contact__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Purchase_Order_Stage_Approved_1</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>jmaltais@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mcollette@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mguitard@legendboats.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Purchase_Order_Stage_Approved_2</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>bgrenier@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jdewar@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jmaltais@legendboats.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Second approval step if order is greater than $5000</description>
        <entryCriteria>
            <criteriaItems>
                <field>AcctSeedERP__Purchase_Order__c.AcctSeedERP__Total__c</field>
                <operation>greaterOrEqual</operation>
                <value>5000</value>
            </criteriaItems>
        </entryCriteria>
        <label>Order greater than $5000</label>
        <name>Order_greater_than_5000</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Purchase order approval process for Montreal</description>
    <emailTemplate>AcctSeed__Accounting_Seed_Email_Templates/Approve_Purchase_Order</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>AcctSeedERP__Purchase_Order__c.Warehouse_Name__c</field>
            <operation>equals</operation>
            <value>Montreal</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_Stage_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Purchase_Order_Approval_Montreal</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Uncheck_In_Approval_PO</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Revert_PO_Stage</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_In_Approval_PO</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Your_purchase_Order_has_been_rejected_Montreal</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Check_In_Approval_PO</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Pending_Approval_Montreal</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Purchase Order Approval - Montreal</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Revert_PO_Stage</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_In_Approval_PO</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
