<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Change_to_Business_Office</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Send_Sales_Approval_Email</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>bgrenier@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>hnguyen@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jdewar@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jduhamel@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jmaltais@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mduhamel@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mmcguire@legendboats.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <description>Requesting Sales Manager approval for a retail sale</description>
    <emailTemplate>Sales_Process/Retail_Sales_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approved_Checkbox_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_Close_Date_to_Today</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_Stage_to_Business_Office_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Deal_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approved_Checkbox_to_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_to_Review</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Deal_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_To_Sales_Manager_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Retail Sales Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Approved_Checkbox_to_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_StageName</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
