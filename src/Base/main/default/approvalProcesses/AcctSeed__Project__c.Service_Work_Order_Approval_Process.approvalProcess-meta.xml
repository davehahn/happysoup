 <?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Owner</field>
        <field>AcctSeed__Account__c</field>
        <field>Name</field>
        <field>AcctSeedERP__Work_Order_Number__c</field>
        <field>Estimated_Service_Duration__c</field>
        <field>Service_Date__c</field>
        <field>Order_Item_Total__c</field>
        <field>Grand_Total__c</field>
        <field>Parking_Spot__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dramnath@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>progers@legendboats.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <description>Approval for a service work that everything is correct Whitefish</description>
    <emailTemplate>Sales_Process/Service_Work_Order_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>AcctSeed__Project__c.RecordType</field>
            <operation>equals</operation>
            <value>Legend Service Work Order</value>
        </criteriaItems>
        <criteriaItems>
            <field>AcctSeed__Project__c.Stage__c</field>
            <operation>equals</operation>
            <value>Pending Inspection,Pending Approval</value>
        </criteriaItems>
        <criteriaItems>
            <field>AcctSeed__Project__c.WarehouseName__c</field>
            <operation>equals</operation>
            <value>whitefish</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Customer_Authorization_Request</name>
            <type>Task</type>
        </action>
        <action>
            <name>Stage_Update</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Stage_back_to_Pending_Diagnostic</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Service Work Order Approval Process Whit</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
