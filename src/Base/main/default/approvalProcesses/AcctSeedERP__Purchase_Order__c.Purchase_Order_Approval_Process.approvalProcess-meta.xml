<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>AcctSeedERP__Order_Date__c</field>
        <field>AcctSeedERP__Total__c</field>
        <field>AcctSeedERP__Vendor__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Change_Stage_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Submit_the_Purchase_Order</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>bgrenier@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>d_alexander@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>epaulino@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mfrench@legendboats.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mguitard@legendboats.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>A request is sent to Managers to Approve the Purchase Order</description>
        <label>Approve Purchase Order</label>
        <name>Approve_Purchase_Order</name>
    </approvalStep>
    <description>An Approval Process for Purchase Orders before they are submitted</description>
    <emailTemplate>AcctSeed__Accounting_Seed_Email_Templates/Approve_Purchase_Order</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Update_to_PO_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Stage_back_to_New</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Purchase_Order_Approval_Rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_Stage_to_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Purchase Order Approval Process</label>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
