<aura:component>

  <ltng:require scripts="{!join(',', $Resource.Libraries +'/js/LightningApex.js',
                                     $Resource.Libraries +'/js/LightningUtils.js') }"  />

  <aura:attribute name="cpq" type="Object" />
  <aura:attribute name="newItem" type="Object" />
  <aura:attribute name="showForm" type="Boolean" default="false" />
  <aura:attribute name="tradeValue" type="Decimal" default="0.00" />
  <aura:attribute name="lien" type="Decimal" default="0.00" />
  <aura:attribute name="valuesChanged" type="Boolean" default="false" />

  <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

  <aura:if isTrue="{! not(v.showForm) }">
    <aura:if isTrue="{! not(empty( v.cpq.tradeIn.items ) ) }">
      <lightning:layout multipleRows="true" pullToBoundary="small" class="slds-p-bottom_medium">
        <lightning:layoutItem size="12"
                              padding="horizontal-small"
                              smallDeviceSize="12"
                              mediumDeviceSize="5"
                              largeDeviceSize="5">
          <lightning:input type="number"
                           formatter="currency"
                         label="Value of Trade"
                         value="{!v.tradeValue}"
                         step="0.01"
                         onchange="{!c.handleTradeValueChange}" />
        </lightning:layoutItem>
        <lightning:layoutItem size="12"
                              padding="horizontal-small"
                              smallDeviceSize="12"
                              mediumDeviceSize="5"
                              largeDeviceSize="5">
          <lightning:input type="number"
                           formatter="currency"
                         label="Lien on Trade"
                         value="{!v.lien}"
                         step="0.01"
                         onchange="{!c.handleTradeValueChange}" />
        </lightning:layoutItem>
         <lightning:layoutItem size="12"
                              padding="horizontal-small"
                              smallDeviceSize="12"
                              mediumDeviceSize="2"
                              largeDeviceSize="2">
          <aura:if isTrue="{!v.valuesChanged}">
            <lightning:button label="save"
                              onclick="{!c.updateTradeValues}"
                              class="slds-m-top_large" />
          </aura:if>
        </lightning:layoutItem>
      </lightning:layout>
      <table class="slds-table slds-table_bordered">
        <thead>
          <tr class="slds-text-title_caps">
            <th>Product</th>
            <th class='slds-text-align_right'>Serial</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <aura:iteration items="{!v.cpq.tradeIn.items}" var="item">
            <tr>
              <td>{!item.modelYear} &nbsp; {!item.manufacturer} - {!item.model}</td>
              <td class='slds-text-align_right'>{!item.serialNumber}</td>
              <td class='slds-text-align_right'>
                <lightning:buttonIcon iconName="utility:close"
                                      size="small"
                                      value="{!item.id}"
                                      onclick="{!c.removeItem}" />
              </td>
            </tr>
          </aura:iteration>
        </tbody>
      </table>
    </aura:if>

    <lightning:layout>
      <lightning:layoutItem size="12"
                            class="slds-align_absolute-center slds-m-top_medium">
        <lightning:button label="Add Item" iconName="utility:add" onclick="{!c.openForm}" />
      </lightning:layoutItem>
    </lightning:layout>
  </aura:if>

  <aura:if isTrue="{!v.showForm}">
    <lightning:layout multipleRows="true">
      <lightning:layoutItem size="12"
                            padding="horizontal-small"
                            smallDeviceSize="12"
                            mediumDeviceSize="4"
                            largeDeviceSize="4">
        <lightning:input type="text"
                         label="Model Year"
                         value="{!v.newItem.modelYear}" />
      </lightning:layoutItem>
      <lightning:layoutItem size="12"
                            padding="horizontal-small"
                            smallDeviceSize="12"
                            mediumDeviceSize="8"
                            largeDeviceSize="8">
        <lightning:input type="text"
                         label="Manufacturer"
                         value="{!v.newItem.manufacturer}" />
      </lightning:layoutItem>
      <lightning:layoutItem size="12"
                            padding="horizontal-small"
                            smallDeviceSize="12"
                            mediumDeviceSize="6"
                            largeDeviceSize="6">
        <lightning:input type="text"
                         label="Model"
                         value="{!v.newItem.model}" />
      </lightning:layoutItem>
      <lightning:layoutItem size="11"
                            padding="horizontal-small"
                            smallDeviceSize="12"
                            mediumDeviceSize="6"
                            largeDeviceSize="6">
        <lightning:input type="text"
                         label="Serial Number"
                         value="{!v.newItem.serialNumber}" />
      </lightning:layoutItem>
      <lightning:layoutItem size="12" class="slds-m-top_medium slds-align_absolute-center">
        <lightning:button label="Cancel"
                          iconName="utility:close"
                          onclick="{!c.closeForm}"
                          class="slds-m-right_medium" />
        <lightning:button label="Add"
                          iconName="utility:add"
                          iconPosition="right"
                          onclick="{!c.addItem}"
                          variant="brand"
                          class="slds-m-left_medium"/>
      </lightning:layoutItem>
    </lightning:layout>
  </aura:if>

</aura:component>