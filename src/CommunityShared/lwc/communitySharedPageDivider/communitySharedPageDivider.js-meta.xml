<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>51.0</apiVersion>
  <description>Community Shared Page Divider</description>
  <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="spaceAbove" type="String" label="Space Above" datasource="None, Small, Average, Large"/>
            <property name="spaceBelow" type="String" label="Space Below" datasource="None, Small, Average, Large"/>
            <property name="colour" type="Color" label="Line Colour" default="rgba(0, 0, 0, 0.5)"/>
            <property name="thickness" type="String" label="Line Thickness" datasource="0, 1, 2, 3, 4, 5, 6"/>
            <property name="sectionWidth"
                      type="String"
                      label="Maximum Width of Section"
                      datasource="Screen, Container, Wide, Average, Thin, Extra Thin"
                      description="Relative to containing element. Screen = Full Width of Screen, Container = Full Width of Containing Element, Wide = 1645px, Average = 1300px, Thin = 1080px, Extra Thin = 780px" default="Container" />
        </targetConfig>
    </targetConfigs>
  <masterLabel>Community Shared Page Divider</masterLabel>
</LightningComponentBundle>
